<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#111827"
  android:padding="24dp">

  <TextView
    android:id="@+id/incoming_call_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="28dp"
    android:text="Incoming call"
    android:textColor="#9CA3AF"
    android:textSize="15sp" />

  <TextView
    android:id="@+id/incoming_call_caller_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/incoming_call_status"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:text="Unknown"
    android:textColor="#FFFFFF"
    android:textSize="32sp"
    android:textStyle="bold" />

  <LinearLayout
    android:id="@+id/incoming_call_actions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="44dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">

      <ImageButton
        android:id="@+id/incoming_call_reject"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_call_decline_circle"
        android:contentDescription="Decline"
        android:padding="18dp"
        android:src="@drawable/ic_decline" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Decline"
        android:textColor="#E5E7EB"
        android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">

      <ImageButton
        android:id="@+id/incoming_call_accept"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_call_accept_circle"
        android:contentDescription="Answer"
        android:padding="18dp"
        android:src="@drawable/ic_accept" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Answer"
        android:textColor="#E5E7EB"
        android:textSize="14sp" />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>
